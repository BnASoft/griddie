<div class="grid masonry collapse">
    {{#each items}}
    <div class="item {{this.type}}">
        <div class="content">
            <div class="title">
                <h3>{{@index}}: {{this.title}}</h3>
            </div>
            <div class="desc">
                <p>{{this.content}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>